# Game Environment Configuration
# Copy this to .env.game and customize for your environment

# High Score API URL
GAME_API_URL=http://localhost:8000

# Fallback URL when API is unavailable
GAME_FALLBACK_URL=https://your-website.com

# Environment mode (development/production)
NODE_ENV=development

# Game configuration
INITIAL_BILL=2500
BASE_ALIEN_SPEED=50
BASE_BULLET_FREQUENCY=2500

# Difficulty scaling
SPEED_INCREASE_PER_LEVEL=0.25
BULLET_FREQUENCY_DECREASE_PER_LEVEL=200
BULLET_SPEED_INCREASE_PER_LEVEL=15